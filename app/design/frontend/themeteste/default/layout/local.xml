<?xml version="1.0" encoding="UTF-8"?>
<layout>

    <default>
        <reference name="footer">
            <block name="tel" type="cms/block">
                <action method="setBlockId">
                    <param>Telefone</param>
                </action>
            </block>
        </reference>

        <reference name="content">
            <block name="inteligencia" type="core/template" template="home/inteligente.phtml">

            </block>
        </reference>

        <reference name="head">
            <action method="addJs">
                <js>validation-cpf.js</js>
            </action>
        </reference> 
 
    </default>

    <catalog_product_view>
        <reference name="head">
            <action method="addCss">
                <css>css/produto.css</css>
            </action>
        </reference>
    </catalog_product_view>

    <PRODUCT_TYPE_configurable>
        <reference name="head">
            <action method="addJs">
                <js>configuravel.js</js>
            </action>
        </reference>
    </PRODUCT_TYPE_configurable>

</layout>